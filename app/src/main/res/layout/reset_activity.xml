<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:background="@color/colorWhite" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/textViewResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/reset"
        android:textAlignment="center"/>
    <EditText
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:gravity="start"
        android:id="@+id/editTextResetEmail"
        android:background="@drawable/edittext_capsule"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="@string/email" android:inputType="textEmailAddress"/>
    <Button android:textSize="18sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/buttonResetReset" android:background="@drawable/button_capsule" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/reset" android:layout_centerHorizontal="true" android:backgroundTint="@color/colorPinkDark"/>
    <Button android:textSize="18sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/buttonResetLogin" android:background="@drawable/button_capsule" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/login" android:layout_centerHorizontal="true" android:backgroundTint="@color/colorEmail"/>
    <Button android:textSize="18sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/buttonResetRegister" android:background="@drawable/button_capsule" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="50dp" android:text="@string/register" android:layout_centerHorizontal="true" android:backgroundTint="@color/colorEmail"/>
</LinearLayout>
