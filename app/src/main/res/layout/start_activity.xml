<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start.LoginActivity">


    <ImageView
        android:id="@+id/imageStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="TeReTa"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlackAlpha"
        android:orientation="vertical"
        android:padding="20dp">


        <Button
            android:id="@+id/buttonStartFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorFacebook"
            android:text="Log in With Facebook"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonStartEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorEmail"
            android:text="Login With Email"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />


        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/colorWhite" android:id="@+id/textViewStartTerms" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/terms_of_service_u"/>
            <TextView android:textSize="12sp" android:textColor="@color/colorWhite" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/and"/>
            <TextView android:textSize="12sp" android:textColor="@color/colorWhite" android:id="@+id/textViewStartPolicy" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy_policy_u"/>
        </LinearLayout>




    </LinearLayout>
</RelativeLayout>